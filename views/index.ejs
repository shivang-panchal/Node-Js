<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
        <% if(users!= "") { %>

            <table border="1px solid black">

                <thead>
                    <tr>
                        <th>Sno</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% users.forEach((user,index) =>{ %>

                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
                                <a href="/edit/<%= user._id %>">Update</a>
                            </td>
                            <td>
                                <a href="/delete/<%= user._id %>">Delete</a>
                            </td>
                        </tr>


                   <% }) %>
                   
                </tbody>
            </table>
            
            
            <% } else { %>
            <h1>No User Find</h1>
            <% } %>
</body>
</html>